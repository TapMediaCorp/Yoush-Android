<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/top_line_bg"
    android:minHeight="72dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/conversationImageDrag"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:tint="@color/black"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_more_vert_24" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/conversationImageDrag1"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:scaleType="fitCenter"
        android:padding="8dp"
        android:tint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_more_vert_24" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/conversationImageDelete"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:padding="12dp"
        android:tint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_trash_filled_32" />

    <include
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        layout="@layout/conversation_activity_pin_item"
        app:layout_constraintEnd_toStartOf="@+id/conversationImageDelete"
        app:layout_constraintStart_toEndOf="@+id/conversationImageDrag" />

</androidx.constraintlayout.widget.ConstraintLayout>
